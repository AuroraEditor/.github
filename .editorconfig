# This file is for unifying the coding style for different editors and IDEs
# Auroa Editor default code style

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JS 2 spaces
[**.js]
indent_style = space
indent_size = 2

# CSS 2 spaces
[**.css]
indent_style = tab
indent_size = 2

# PHP 4 spaces
[**.php]
indent_style = space
indent_size = 4

[**.swift]
indent_style = space
indent_size = 4
